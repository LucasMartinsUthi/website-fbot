---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { PublicationItem } from "~/types";

export interface Props {
    publications: PublicationItem[];
}

const { publications } = Astro.props
---
<ContentSection title="Publications" id="publications">
    <div class="flex flex-col justify-center items-center space-y-2">
        <div class="w-100 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
            {publications.map(({title, description, date, url}) => 
                
                <div class="flex flex-col justify-between gap-4 bg-white p-4 border-l-4 border-orange-500">
                    <h3 class="font-blackops text-gray-900">{title}</h3>
                    <p class="text-offset text-sm font-medium mr-4">{description}</p>

                    <div class="flex justify-between items-end">
                        <span class="text-gray-600 font-bold text-xs">{date}</span>
                        <a href={url} target="_blank" class="flex justify-center items-center gap-2 bg-orange-500 p-4 text-sm h-8">
                            Read More
                            <Icon class="h-6" name="ph:arrow-square-up-right-fill" />
                        </a>
                    </div>
                </div>
            )}
        </div>
    </div>
</ContentSection>