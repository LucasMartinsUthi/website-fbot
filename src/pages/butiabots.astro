---

<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <Head title="ButiaBOTS"/>
  <body class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white">
    <Header />
    <div class="pt-[72px]">
        <div class="min-h-screen">
            <div class="flex flex-1 flex-column justify-center p-14 bg-white">
                <Icon name="we_are_champions" class="h-16" />      
            </div>

            <ContentSection id="butiabots" title="BuiaBOTS">
                <div class="flex">
                    <div class="basis-1/2">
                        <p class="text-lg">{teamDescription}</p>
                    </div>

                    <div class="basis-1/2 flex justify-center items-center">
                        <Icon name="logomark" class="h-60" />
                    </div>
                </div>        
            </ContentSection>
        </div>

        <ContentSection title="Photos" id="photos" theme="light">
            <div class="flex flex-col justify-center items-center space-y-2">
                <div class="w-100 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
                    {photos.map(photo => {
                        return (
                            <div class="group aspect-video hover:!text-default">
                                <figure class="relative h-full w-full overflow-hidden">
                                    <Picture
                                        class="object-cover w-full h-full transition-all duration-300 bg-cover group-hover:scale-110 group-hover:opacity-20 group-focus:scale-110 group-focus:opacity-20"
                                        src={photo.src}
                                        widths={[450, 800]}
                                        sizes="(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw"
                                        alt={photo.alt}
                                        aspectRatio="16:9"
                                    />
                                    <figcaption class="absolute inset-0">
                                        <div class="flex h-full flex-col items-center justify-center gap-2 opacity-0 transition-all duration-300 group-hover:opacity-100 group-focus:opacity-100">
                                            <p class="border border-current px-4 py-2">{photo.alt}</p>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        )
                    })}
                </div>
            </div>
        </ContentSection>

        <ContentSection title="Videos" id="videos" theme="light">
            <div class="flex flex-col justify-center items-center space-y-2">
                <div class="w-100 grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
                  { videos.map((video) => {
                        return (
                            <div class="group aspect-video hover:!text-default">
                                <figure class="relative h-full w-full overflow-hidden">
                                    <Picture
                                        class="object-cover w-full h-full transition-all duration-300 bg-cover group-hover:scale-110 group-hover:opacity-20 group-focus:scale-110 group-focus:opacity-20"
                                        src={video.src}
                                        widths={[450, 800]}
                                        sizes="(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw"
                                        alt={video.alt}
                                        aspectRatio="16:9"
                                    />
                                    <figcaption class="absolute inset-0">
                                        <div class="flex h-full flex-col items-center justify-center gap-2 opacity-0 transition-all duration-300 group-hover:opacity-100 group-focus:opacity-100">
                                            <p class="border border-current px-4 py-2">{video.alt}</p>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        )
                    })
                }
                </div>
            </div> 
        </ContentSection>

        <ContentSection title="Timeline" id="timeline">
            <div class="flex justify-left space-y-2 gap-16 items-stretch">
                <div>
                    <div id="side-column" class="w-6 bg-orange-500 h-[calc(100%+3.5rem)]"></div>
                </div>
                <div class="flex justify-left items-stretch space-y-2 gap-16">
                    <div class="flex flex-col gap-12 pb-8">
                        {timeline.map(({ year, items }) => {
                            let itemsList = items.map(item => {
                                return <li class="text-base">{item}</li>
                            })

                            return (
                                <div class="flex flex-col gap-1">
                                    <h3 class="font-blackops text-4xl">{year}</h3>
                                    <ul class="list-disc space-y-2">
                                        {itemsList}          
                                    </ul>
                                </div>
                            )
                        })}
                    </div>
                </div>
            </div>
        </ContentSection>

        <ContentSection title="Members" id="members" theme="light">
            <div class="flex flex-col justify-center items-center space-y-2">
                <div class="flex flex-wrap gap-6 justify-center items-center">
                    {members.map(member => (
                        <div class="basis-[31%]">
                            <MemberCard {...member}/>
                        </div>
                    ))}
                </div>
            </div>
        </ContentSection>

        <ContentSection title="Publications" id="publications">
            <div class="flex flex-col justify-center items-center space-y-2">
                <p>Em Construção</p>
            </div>
        </ContentSection>
    </div>

    <Footer />
</body>
</html>
