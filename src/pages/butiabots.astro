---
import "@fontsource/inter/variable.css";
import Header from "~/components/header.astro";
import Showcase from "~/components/showcase.astro";
import { Icon } from "astro-icon";

import "~/styles/index.css";
import Head from "~/components/head.astro";
---

<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <Head title="ButiaBOTS"/>
  <body class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white">
    <Header />

    <div class="space-y-24">
        <section id="about-us" class="h-screen flex-1 scroll-mt-24 items-left gap-8 space-y-8 py-20">
			<div class="flex flex-col">
				<div class="flex flex-1 flex-column justify-center p-14 bg-white">
					<Icon name="we_are_champions" class="h-16" />      
				</div>

				<div class="flex-1 flex-col justify-center p-14">
					<h2 class="text-4xl font-bold pb-8">ButiaBOTS</h2>

					<div class="flex">
						<div class="basis-1/2">
							<p class="text-lg">The Brazilian United Team for Intelligent Automation - BUTIA was founded in 2018 by FBOT from Universidade Federal do Rio Grande (FURG) and Taura Bots from Universidade Federal de Santa Maria (UFSM). The ButiaBots team has already participated in several RoboCup@Home competitions, including being the third best team in the Brazilian Robotics Competition (LARC/CBR) for three consecutive years (2018 - 2019 - 2020), vice champion of the Brazilian Robotics Competition (LARC/CBR) 2021, third best team in the RoboCup Thailand 2022 (Open Platform League), and current champion of the CBR/LARC 2022.</p>
						</div>

						<div class="basis-1/2 flex justify-center items-center">
							<Icon name="logomark" class="h-60" />
						</div>
					</div>
				</div>
			</div>
        </section>
        <Showcase />
    </div>

  </body>
</html>
