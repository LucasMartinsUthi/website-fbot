---
import "@fontsource/inter/variable.css";
import Header from "~/components/header.astro";
import ContentSection from "~/components/content-section.astro";
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import "~/styles/index.css";
import Head from "~/components/head.astro";

const photos = [
    {src: "/photo1.jpg", alt: "ButiaBOTS 2021"},
    {src: "/photo1.jpg", alt: "ButiaBOTS 2021 - 1"},
    {src: "/photo1.jpg", alt: "ButiaBOTS 2021 - 2"},
];

const videos = [
    {src: "/photo1.jpg", alt: "ButiaBOTS 2021"},
    {src: "/photo1.jpg", alt: "ButiaBOTS 2021 - 1"},
    {src: "/photo1.jpg", alt: "ButiaBOTS 2021 - 2"},
    {src: "/photo1.jpg", alt: "ButiaBOTS 2021"},
    {src: "/photo1.jpg", alt: "ButiaBOTS 2021 - 1"},
    {src: "/photo1.jpg", alt: "ButiaBOTS 2021 - 2"},
];
---

<!DOCTYPE html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <Head title="ButiaBOTS"/>
  <body class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white">
    <Header />

    <div class="space-y-24">
        <section id="about-us" class="h-screen flex-1 scroll-mt-24 items-left gap-8 space-y-8 py-20">
			<div class="flex flex-col">
				<div class="flex flex-1 flex-column justify-center p-14 bg-white">
					<Icon name="we_are_champions" class="h-16" />      
				</div>

				<div class="flex-1 flex-col justify-center p-14">
					<h2 class="text-4xl font-bold pb-8">ButiaBOTS</h2>

					<div class="flex">
						<div class="basis-1/2">
							<p class="text-lg">The Brazilian United Team for Intelligent Automation - BUTIA was founded in 2018 by FBOT from Universidade Federal do Rio Grande (FURG) and Taura Bots from Universidade Federal de Santa Maria (UFSM). The ButiaBots team has already participated in several RoboCup@Home competitions, including being the third best team in the Brazilian Robotics Competition (LARC/CBR) for three consecutive years (2018 - 2019 - 2020), vice champion of the Brazilian Robotics Competition (LARC/CBR) 2021, third best team in the RoboCup Thailand 2022 (Open Platform League), and current champion of the CBR/LARC 2022.</p>
						</div>

						<div class="basis-1/2 flex justify-center items-center">
							<Icon name="logomark" class="h-60" />
						</div>
					</div>
				</div>
			</div>
        </section>

        <ContentSection title="Photos" id="photos">
            <div class="flex flex-col justify-center items-center space-y-2">
                <div class="w-100 grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
                  { photos.map((photo) => {
                        return (
                            <div class="group aspect-video hover:!text-default">
                                <figure class="relative h-full w-full overflow-hidden">
                                    <Picture
                                        class="object-cover w-full h-full transition-all duration-300 bg-cover group-hover:scale-110 group-hover:opacity-20 group-focus:scale-110 group-focus:opacity-20"
                                        src={photo.src}
                                        widths={[450, 800]}
                                        sizes="(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw"
                                        alt={photo.alt}
                                        aspectRatio="16:9"
                                    />
                                    <figcaption class="absolute inset-0">
                                        <div class="flex h-full flex-col items-center justify-center gap-2 opacity-0 transition-all duration-300 group-hover:opacity-100 group-focus:opacity-100">
                                            <p class="border border-current px-4 py-2">{photo.alt}</p>
                                        </div>
                                    </figcaption>
                                </figure>
                            </div>
                        )
                    })
                }
                </div>
            </div>
        </ContentSection>

        <ContentSection title="Videos" id="videos">
            <div class="flex flex-col justify-center items-center space-y-2">
                <div class="w-4/5 grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
                  { videos.map((video) => {
                        return (
                            <figure class="relative h-full w-full overflow-hidden">
                                <Picture
                                    class="object-cover w-full h-full transition-all duration-300 bg-cover group-hover:scale-110 group-hover:opacity-20 group-focus:scale-110 group-focus:opacity-20"
                                    src={video.src}
                                    widths={[450, 800]}
                                    sizes="(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw"
                                    alt={video.alt}
                                    aspectRatio="16:9"
                                />
                            </figure>
                        )
                    })
                }
                </div>
            </div>
        </ContentSection>
    </div>

  </body>
</html>


